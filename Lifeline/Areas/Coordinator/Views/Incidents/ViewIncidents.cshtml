
@{
    ViewBag.Title = "ViewIncidents";
    Layout = "~/Areas/Coordinator/Views/Shared/CoordiLayout.cshtml";
}

@using Lifeline.Code
<div class="vd_content-wrapper">
    <div class="vd_container">
        <div class="vd_content clearfix">
            <div class="vd_head-section clearfix">
                <div class="vd_panel-header mylinks">
                    <ul class="breadcrumb">
                        <li>Incidents </li>
                        <li class="active">View</li>
                    </ul>
                    <div class="vd_panel-menu hidden-sm hidden-xs resize-content" data-intro="" data-step="5" data-position="left">
                        <div data-action="remove-navbar" data-original-title="" data-toggle="tooltip" data-placement="bottom" class="remove-navbar-button menu"><i class="fa fa-arrows-h"></i></div>
                        <div data-action="remove-header" data-original-title="" data-toggle="tooltip" data-placement="bottom" class="remove-header-button menu"><i class="fa fa-arrows-v"></i></div>
                        <div data-action="fullscreen" data-original-title="" data-toggle="tooltip" data-placement="bottom" class="fullscreen-button menu"><i class="glyphicon glyphicon-fullscreen"></i></div>
                    </div>
                </div>
            </div>

            <div class="vd_content-section clearfix subdiv">
                <div class="col-lg-12 divsearch">
                    <input type="hidden" name="MemberId" id="MemberId" value="@Request.Cookies["_lifecoordi"]["mid"]" />
                    <div class="col-lg-4 hide">
                        <label class="navpad"> <i class="fa fa-building-o iconcolr" aria-hidden="true"></i> Select Member</label>
                        <div class="form-group">
                            <select class="form-control main-input" name="volunteer" id="volunteer" default="0" bindval="0">
                                <option value="0">Members</option>
                                <option value="1">Volunteers</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <label class="col-sm-10 control-label navpad">Search</label>
                        <div class="input-group col-sm-12">
                            <input type="text" placeholder="Search Name" id="search">
                        </div>
                    </div>
                    <div class="col-lg-3 hide">
                        <label class="col-sm-10 control-label navpad">From</label>
                        <div class="input-group col-sm-12">
                            <input type="text" placeholder="Date" id="from" readonly>
                            <span class="input-group-btn">
                                <button class="btn btn-default cal-time" type="button">  <i class="fa fa-calendar iconcolr" aria-hidden="true"></i></button>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-3 hide">
                        <label class="col-sm-10 control-label navpad">To</label>
                        <div class="input-group col-sm-12">
                            <input type="text" placeholder="Date" id="to" readonly>
                            <span class="input-group-btn">
                                <button class="btn btn-default cal-time" type="button">  <i class="fa fa-calendar iconcolr" aria-hidden="true"></i></button>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <label class="navpad"></label>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary searchrowbtn mr-10" id="btnShow">Search</button>
                            <button type="button" class="btn btn-primary searchrowbtn ml-10" id="btnShowAll">Clear</button>
                        </div>
                    </div>
                    <div class="col-lg-12 valerr"></div>
                </div>

                <div class="col-xs-12 hrline-break"><hr></div>
                <div class="pageloader hide"></div>
                <div class="col-lg-12 tbbg2 pagecontent grid-pi history">
                    <div class="col-lg-12 hide nodata dataerr" id="norec">
                        No Incidents Found.
                    </div>
                    <div id="tblgrid" class="hide">
                        <div class="col-lg-12 grid-i">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    Total Incidents: <span id="totalrec">0</span>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    Page Size :
                                    <select name="ddlpagesize" id="ddlpagesize" class="form-control ps">
                                        <option>25</option>
                                        <option>50</option>
                                        <option>75</option>
                                        <option>100</option>
                                        <option>200</option>
                                        <option>300</option>
                                        <option>400</option>
                                        <option>500</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 text-right">
                                <div class="form-group" id="showpageinfo">
                                </div>
                            </div>
                            <div class="col-lg-3 text-right">
                                &nbsp;
                            </div>
                        </div>

                        <div class="tblcontent">
                            <div class="table-responsive">
                                <table id="tbldataabs" class="mytbl table display dttbl table-striped table-hover">
                                    <thead class="oc-thead">
                                        <tr>
                                            <th>Image</th>
                                            <th>Victim</th>
                                            <th>Mobile</th>
                                            <th>Message</th>
                                            <th>Image</th>
                                            <th>Video</th>
                                            <th>Helper</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody class="oc-tbody" id="tbldata"></tbody>
                                </table>
                            </div>
                            <div class="clearfix"></div>
                            <div class="px-2 my-2 pull-right">
                                <ul class="pagination m-0">
                                    <li class="active"><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section pagescripts {
    <link href="@Globalsettings.appcsspath("bs-datetime.css")" rel="stylesheet">
    <script type="text/javascript" src="@Globalsettings.appjspath("moment.min.js")"></script>
    <script type="text/javascript" src="@Globalsettings.appjspath("bootstrap-datetimepicker.min.js")"></script>
    <script>
        $(document).ready(function () {
            getincidentspage();
        });

        function getincidentspage() {

            GetIncidents(1, 10, 1, '');
            $(document).on("change", '#volunteer', function (event) {
                GetIncidents(1, 10, 1, '');
            });
            $(document).on('click', '#shwbtn', function () {
                GetIncidents(1, 10, 1, '');
            });
            $(document).on('click', '#shwallbtn', function () {
                $('#StartDate').val("");
                $('#EndDate').val("");
                $('#Searchstr').val("");
                GetIncidents(1, 10, 1, '');

            });
            $(document).on('click', '#srchbtn', function () {
                GetIncidents(1, 10, 1, '');

            });
            $(document).on("click", ".d-paging", function (event) {

                var pagesize = $('#ddlpagesize').val();
                var pageindex = $(this).attr('_id');
                var sortby = 1; //$('#SortBy').val();
                var searchby = $('#Searchstr').val();
                GetIncidents(pageindex, pagesize, sortby, searchby);
            });
            $(document).on("change", '#ddlpagesize', function (event) {

                var pagesize = $('#ddlpagesize').val();
                var pageindex = 1;
                var sortby = 1; //$('#SortBy').val();
                var searchby = $('#Searchstr').val();
                GetIncidents(pageindex, pagesize, sortby, searchby);
            });
            $(document).on("keyup", '#Searchstr', function (event) {
                var pagesize = 10;// $('#ddlPageSize').val();
                var pageindex = 1;
                var sortby = 1; //$('#SortBy').val();
                var searchby = $('#Searchstr').val();
                GetIncidents(pageindex, pagesize, sortby, searchby);
                $('#Searchstr').focus();
                var $thisVal = $('#Searchstr').val();
                $('#Searchstr').val('').val($thisVal);

            });
        }
        function GetIncidents(pageindex, pagesize, sortby, searchby) {
            var searchby = $('#Searchstr').val();
            var mid = $("#MemberId").val();
            var row = '';
            var reccount = 0;
            var isloader = String(searchby).length == 0 ? true : false
            gl.ajaxreqloader(apiurl + "GetRescuesList", "get", { mid: mid, pgindex: pageindex, pgsize: pagesize, sortby: sortby, str: searchby }, function (response) {
                if (response.length > 0) {
                    reccount = response[0].TotalRecords;
                    $.each(response, function (i, item) {
                        //console.log(item);
                        var video = "No Video";
                        if (item.VideoPath != "" && item.VideoPath != null) {
                            video= "<video width='200' height='150' controls><source src='"+item.VideoPath+"' type='video/mp4'><source src='"+item.VideoPath+"' type='video/ogg'>Your browser does not support the video tag.</video>";
                        }

                        var image = "No Image";
                        if (item.IncidentImagePath != "" && item.IncidentImagePath != null) {
                            image = "<a href='" + item.IncidentImagePath + "' target='_blank'><img src='" + item.IncidentImagePath + "' class='grimg'/></a>";
                        }

                        row += "<tr><td><img src='" + item.CustomerImagePath + "' class='grimg'/></td><td>" + item.VictimName + "</td><td>" + item.Mobile + "</td><td>" + item.Message + "</td><td>" + image + "</td><td>" + video + "</td><td>" + item.HelperName + "</td><td>" + item.CreateDatestring + "</td></tr>";
                    });
                    $("#tbldata").html(row);
                    $('#norec').addClass('hide');
                    $('#tblgrid').removeClass('hide');
                    setPagging(reccount, pageindex, pagesize);
                }
                else {
                    $('#norec').removeClass('hide');
                    $('#tblgrid').addClass('hide');
                }
            }, '', '', '', '', true, true, '.loader', '.tblcontent', 'text json', 'true');
        }
    </script>
}




